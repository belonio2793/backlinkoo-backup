  "commentFormFootprints": {
    "standard_wp_comments": {
      "description": "Standard WordPress comment forms",
      "selectors": [
        "form#commentform",
        "form.comment-form",
        "form[action*='wp-comments-post.php']"
      ],
      "fields": {
        "author": ["#author", "input[name='author']", ".comment-form-author input"],
        "email": ["#email", "input[name='email']", ".comment-form-email input"],
        "url": ["#url", "input[name='url']", ".comment-form-url input"],
        "comment": ["#comment", "textarea[name='comment']", ".comment-form-comment textarea"]
      },
      "success_indicators": [
        "Your comment is awaiting moderation",
        "Thank you for your comment",
        "Comment submitted successfully"
      ]
    },
    
